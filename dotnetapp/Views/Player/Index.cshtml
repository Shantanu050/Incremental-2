@model IEnumerable<Player>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Bidding Amount</th>
        <th>Team Id</th>
        <th>Team</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.BiddingAmount</td>
                <td>@item.TeamId</td>
                <td>@item.Team.Name</td>
                <td>@Html.ActionLink("Delete","Delete","Player",new{id=item.Id},new{@class="btn btn-danger"})</td>
                <td>@Html.ActionLink("Edit","Edit","Player",new{id=item.Id},new{@class="btn btn-secondary"})</td>
            </tr>
        }
    </tbody>
</table>
<center>@Html.ActionLink("Add Record","Create","Player")</center>
<center>@Html.ActionLink("Find Player","FindPlayer","Player")</center>
<center>@Html.ActionLink("Show Teams","DisplayTeams","Player")</center>
